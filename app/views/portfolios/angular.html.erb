 <h1>Angular Portfolio Items</h1>


<%= link_to "Create a new Portfolio",new_portfolio_url if logged_in?(:site_admin) %>

<% @angular_portfolio_item .each do |portfolio_item| %>
	<p><%= link_to portfolio_item.title ,portfolio_show_path(portfolio_item) %></p>
	<p><%= portfolio_item.subtitle %></p>
	<p><%= portfolio_item.body %></p>
	<a><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %></a>
	 
	<%= link_to "Edit",edit_portfolio_path(portfolio_item.id), data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
	<%= link_to 'Destroy', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
<% end %>