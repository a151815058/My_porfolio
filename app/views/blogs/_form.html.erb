<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :blog_title , class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, id: :blog_body, class: 'form-control' , rows: 20 %>
  </div>

  <div class="form-group">
    <%= form.label :topic_id %>
    
    <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Small button
    </button>
    <div class="dropdown-menu">
      <%= form.text_area :topic_id, id: :topic_id , class: 'dropdown-item'%>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Sumbit", class: 'btn btn-primary' %>
  </div>
<% end %>

